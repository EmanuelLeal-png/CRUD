<h1>Criar Nova Aula</h1>

<form action="/aulas" method="POST">
    <div class="form-group">
        <label>Tema:</label>
        <input type="text" name="tema" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Descrição:</label>
        <input type="text" name="descricao" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Data:</label>
        <input type="date" name="data_aula" class="form-control" required>
    </div>
    <div class="form-group">
        <label>Horário:</label>
        <input type="time" name="horario" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="/aulas" class="btn btn-secondary">Cancelar</a>
</form>